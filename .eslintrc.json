{
  "extends": ["next/core-web-vitals"],
  "plugins": [
    "import",
    "unused-imports"
  ],
  "rules": {
    "semi": ["error", "never"],
    "no-multi-spaces": "error",
    "no-multiple-empty-lines": ["error", {
      "max": 1,
      "maxEOF": 1,
      "maxBOF": 0
    }],
    "unused-imports/no-unused-imports": "error",
    "import/order": ["error", {
      "newlines-between": "always"
    }]
  }
}
